generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model feedback {
  id      String  @id
  message String
  ip      String
  user_id String?
  users   users?  @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model leaderboard {
  id              String   @id
  device_id       String   @unique(map: "leaderboard_index")
  device_birthday DateTime @db.Timestamp(6)
  device_name     String
  total_dabs      Int
  owner_name      String
  last_active     DateTime @default(now()) @db.Timestamp(6)
  last_ip         String?
  device_model    Int?     @db.SmallInt
}

model users {
  id              String     @id
  connection_id   String
  platform        String
  connection_name String
  feedback        feedback[]
}
